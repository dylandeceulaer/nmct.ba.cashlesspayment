@model nmct.ba.cashlessproject.api.PresentationModels.OrganisationRegisterPM

@{
    ViewBag.Title = ViewBag.KassaNaam + "toewijzen.";
}

<h2>Toevoegen aan organisatie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.KassaNaam</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OrganisationRegiser.OrganisationID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OrganisationRegiser.OrganisationID, Model.Organisations, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OrganisationRegiser.OrganisationID, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.OrganisationRegiser.RegisterID, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            @Html.LabelFor(model => model.OrganisationRegiser.FromDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OrganisationRegiser.FromDate, new { @class = "form-control ", @type = "date" })
                @Html.ValidationMessageFor(model => model.OrganisationRegiser.FromDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrganisationRegiser.UntilDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OrganisationRegiser.UntilDate, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.OrganisationRegiser.UntilDate, "", new {  @class = "text-danger" } )
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
