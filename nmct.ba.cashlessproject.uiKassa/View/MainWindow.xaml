<Window x:Class="nmct.ba.cashlessproject.uiKassa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:nmct.ba.cashlessproject.uiKassa.ViewModel"
        xmlns:v="clr-namespace:nmct.ba.cashlessproject.uiKassa.View"
        Title="{Binding CurrentPage.Name}" Height="530" Width="800">
    <Window.DataContext>
        <vm:ApplicationVM/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:KassaVM}">
            <v:Kassa/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AanmeldenVM}">
            <v:Aanmelden/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding CurrentPage}"/>
    </Grid>

</Window>
