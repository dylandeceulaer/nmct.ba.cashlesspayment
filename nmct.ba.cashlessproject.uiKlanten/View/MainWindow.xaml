<Window x:Class="nmct.ba.cashlessproject.uiKlanten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:nmct.ba.cashlessproject.uiKlanten.ViewModel"
        xmlns:v="clr-namespace:nmct.ba.cashlessproject.uiKlanten.View"
        Title="{Binding CurrentPage.Name}" Height="530" Width="830">
    <Window.DataContext>
        <vm:ApplicationVM/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AanmeldenVM}">
            <v:Aanmelden/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RegistreerVM}">
            <v:Registreer/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:KlantBeheerVM}">
            <v:KlantBeheer/>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentPage}" Grid.Row="1"/>
    </Grid>

</Window>
